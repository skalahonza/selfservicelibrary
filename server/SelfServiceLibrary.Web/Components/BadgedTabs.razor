<Tabs SelectedTab="@SelectedTab" SelectedTabChanged="SelectedTabChanged">
    <Items>
        @foreach (var tab in Tabs)
        {
            <Tab Name="@tab">
                @tab <Badge Color="Color.Primary">@TabCounts[tab]</Badge>
            </Tab>
        }
    </Items>
</Tabs>


@code{
    [Parameter]
    public string SelectedTab { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> SelectedTabChanged { get; set; }

    [Parameter]
    public List<string> Tabs { get; set; } = new List<string>();

    [Parameter]
    public Dictionary<string, int> TabCounts { get; set; } = new Dictionary<string, int> { { string.Empty, 0 } };
}